{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "5.12.0",
    "husky": "1.0.0-rc.15",
    "lerna": "^2.9.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "react-scripts": "2.1.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --no-ignore --fix",
      "prettier --write",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "format": "prettier --trailing-comma es5 --single-quote --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'"
  }
}
